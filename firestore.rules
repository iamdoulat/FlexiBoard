rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow only authenticated users to read and write to the operator settings collections
    match /rechargeOperatorSettings/{operatorId} {
      allow read, write: if request.auth != null;
    }
    match /balanceCheckSettings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
