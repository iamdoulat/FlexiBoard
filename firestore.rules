rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and for development purposes only.
    // They allow anyone to read and write to your operator settings.
    // You should implement user authentication and secure these rules
    // before deploying to production.
    match /rechargeOperatorSettings/{operatorId} {
      allow read, write: if true;
    }

    match /balanceCheckSettings/{operatorId} {
      allow read, write: if true;
    }
  }
}
